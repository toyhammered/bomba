<div id="user-profile-header">
  <%= render partial: 'header' %>

  <div class="container">
    <div class="row">
      <div id="post-form" class="col-md-offset-1 col-md-7">
        <% if policy(@user).owner? %>
          <%= react_component('PostForm',
            { user: @user,
              authenticity_token: form_authenticity_token
            }) %>
        <% end %>
        <%= react_component("PostsContainer",
            {
              user: @user,
              current_user: current_user,
              comment_authenticity_token: form_authenticity_token
            }) %>
      </div>
      <div class="col-md-3 friends">
        <%= render partial: 'users/friends' %>
      </div>
    </div>
  </div>

</div>
