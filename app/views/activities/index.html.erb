<div class="container">
  <div class="row">

    <div class="col-md-offset-1 col-md-7">
      <%= react_component('PostForm',
        { user: current_user,
          authenticity_token: form_authenticity_token
        }) %>
      <% @active_friends.each do |friend| %>
        <%= react_component("PostsContainer",
            {
              posts: api_v1_posts_path,
              user: friend,
              current_user: current_user,
              comment_authenticity_token: form_authenticity_token
            }) %>
      <% end %>
    </div>

    <div class="col-md-3" id="activity">
      <div class="row">

        <div class="panel">
          <div class="panel-heading text-center">Recent Activity</div>
          <div class="panel-body">
            <div class="col-md-12">
              <div class="row">
                <%= render partial: 'activities/activity', collection: @activities %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
